<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_small_id"
        android:layout_width="370dp"
        android:layout_height="95dp"
        android:text="Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#215f54"
        android:textColor="#efd476"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="255dp"
        android:textSize="40sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_medium_id"
        android:layout_width="370dp"
        android:layout_height="95dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="#215f54"
        android:textColor="#efd476"
        android:text="Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_large_id"
        app:layout_constraintTop_toBottomOf="@+id/btn_small_id"
        android:textSize="40sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_large_id"
        android:layout_width="370dp"
        android:layout_height="95dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="255dp"
        android:background="#215f54"
        android:textColor="#efd476"
        android:text="Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="40sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>